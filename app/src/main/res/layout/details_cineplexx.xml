<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/namev"
            android:autoLink="all"
            android:layout_width="377dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageCineplex"
            android:layout_width="174dp"
            android:layout_height="173dp"
            android:layout_above="@+id/namev"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/namev"
            app:layout_constraintTop_toBottomOf="@+id/namev"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/link"
            android:layout_width="195dp"
            android:layout_height="39dp"
            android:layout_marginTop="24dp"
            android:text="Trailer and tickets"
            android:textStyle=""
            android:textColor="#000"
            android:textSize="20sp"
            android:autoLink="web"
            android:textColorLink="#0f126c "
            app:layout_constraintEnd_toEndOf="@+id/imageCineplex"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageCineplex"
            app:layout_constraintTop_toBottomOf="@+id/imageCineplex" />

        <ListView
            android:id="@+id/second_list"
            android:layout_width="397dp"
            android:layout_height="264dp"
            android:layout_marginTop="12dp"
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/link"
            app:layout_constraintTop_toBottomOf="@+id/link" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

