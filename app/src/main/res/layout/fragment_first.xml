<?xml version="1.0"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/colorDarkRed">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="288dp"
                android:layout_height="98dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/cinema"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.474"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cplxx"
                android:layout_width="199dp"
                android:layout_height="73dp"
                android:layout_marginTop="128dp"
                android:background="@drawable/btn_cinema"
                android:text="CINEPLEXX"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="@+id/image"
                app:layout_constraintStart_toStartOf="@+id/image"
                app:layout_constraintTop_toTopOf="@+id/image" />

            <Button
                android:id="@+id/village"
                android:layout_width="199dp"
                android:layout_height="73dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_cinema"
                android:text="VILLAGE COSMOS"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="@+id/cplxx"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/cplxx"
                app:layout_constraintTop_toBottomOf="@+id/cplxx" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="349dp"
                android:layout_height="440dp"
                android:bottomLeftRadius="50dip"
                android:bottomRightRadius="50dip"
                android:topLeftRadius="50dip"
                android:topRightRadius="50dip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:srcCompat="@drawable/ellipse1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="275dp"
                android:layout_height="31dp"
                android:text="CHOOSE CINEMA..."
                android:textColor="@color/colorBlack"
                android:textSize="25dp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.529"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</ScrollView>